<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".CreateMemory">

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:background="#EEE"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/edtCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPreview"
        android:layout_marginTop="12dp"
        android:hint="Caption (optional)" />

    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtCaption"
        android:layout_marginTop="8dp"
        android:text="Pick Photo" />

    <TextView
        android:id="@+id/tvMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPickImage"
        android:layout_marginTop="12dp"
        android:text="No music selected" />

    <Button
        android:id="@+id/btnPickMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMusic"
        android:layout_marginTop="6dp"
        android:text="Pick Music (optional)" />

    <LinearLayout
        android:id="@+id/musicControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPickMusic"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Pause" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Stop" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveMemory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicControls"
        android:layout_marginTop="12dp"
        android:text="Save Memory" />

    <Button
        android:id="@+id/btnBackToMain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSaveMemory"
        android:layout_marginTop="8dp"
        android:text="Back" />

</RelativeLayout>
